    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Net6.0",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-net6.0",
            "program": "${workspaceFolder}/Console/bin/Debug/net6.0/Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Console",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run Net461 (Mono)",
            "type": "mono",
            "request": "launch",
            "preLaunchTask": "build-net461",
            "program": "${workspaceFolder}/Console/bin/Debug/net461/Console.exe",
            "args": [],
            "cwd": "${workspaceFolder}/Console",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Run NetCoreApp3.1",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-netcoreapp3.1",
            "program": "${workspaceFolder}/Console/bin/Debug/netcoreapp3.1/Console.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Console",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Run Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "test",
            "console": "internalConsole"
        }
    ]
}